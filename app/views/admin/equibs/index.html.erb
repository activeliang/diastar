<div class="container">
  <h2 class="text-center">机器列表</h2>

  <div class="haha">
    <%= link_to("新增设备",new_admin_equib_path, class:"btn btn-success")%>
  </div>


  <div class="haha" style="overflow-x: auto;">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>图片</th>
                <th>机器名称</th>
                <th>所属部门</th>
                <th>存放位置</th>
                <th>操作选项</th>
            </tr>
        </thead>
        <tbody>
            <% @equibs.each do |equib| %>
            <tr>
                <td><%= equib.id %></td>
                <td>
                    <%= link_to admin_equib_path(equib) do %>
                    <% if equib.image.present? %>
                    <%= image_tag(equib.image.thumb.url, class: "thumbnail haha3")%>
                <% else%>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail haha3")%>
                    <% end %>
                    <% end %>
                </td>
                <td><%= link_to(equib.title,admin_equib_path(equib))%></td>
                <td><%= equib.department %></td>
                <td><%= equib.position %></td>
                <td><%= link_to("修改属性", edit_admin_equib_path(equib),class: "btn btn-info btn-md")%>
                    <%= link_to("删除这个设备", admin_equib_path(equib),method: :delete, data: {confirm:"你确定要删除这个设备吗？删除后无法找回！"},class: "btn btn-danger btn-md")%>
                </tmd
            </tr>
            <% end %>
        </tbody>
    </table>
  </div>
  <div class="group total pull-right col-xs-12">
     <span style="font-size: 20px;">资产总额：</span>
      <span class="label label-success" style="font-size:150%">
          <%= render_total_price %>
          CNY
      </span>
  </div>
  <br/>
  <hr/>
  <div class="button">
      <span style="font-size:20px;">导出Excel</span>
      <%= link_to("CSV", admin_equibs_path(format: "csv"), class: "btn btn-success") %>
      |
      <%= link_to("Excel", admin_equibs_path(format: "csv") ,class: "btn btn-success")%>
  </div>

</div>
