<h1 class="text-center">修改设备信息</h1>
<div class="container form-group-bc">


  <%= simple_form_for [:admin,@equib] do |f| %>
  <div class="col-md-3 col-xs-6"><div class="form_title"><%= f.input :title,label:"名称"%></div></div>
  <div class="col-md-3 col-xs-6"><div class="form_department"><%= f.input :department,label:"所属部门"%></div></div>
  <div class="col-md-3 col-xs-6"><div class="form_position"><%= f.input :position,label:"存放位置"%></div></div>
  <div class="col-md-3 col-xs-6"><div class="form_principal"><%= f.input :principal,label:"负责人"%></div></div>


  <div class="col-md-3 col-xs-6"><div class="form_use_state"><%= f.input :use_state,label:"使用状态"%></div></div>
  <div class="col-md-3 col-xs-6"><div class="form_origin"><%= f.input :origin,label:"产地"%></div></div>
  <div class="col-md-3 col-xs-6"><div class="form_model"><%= f.input :model,label:"型号"%></div></div>
  <div class="col-md-3 col-xs-6"><div class="form_supplier"><%= f.input :supplier,label:"供应商"%></div></div>
  <div class="col-md-3 col-xs-6"><div class="form_warranty"><%= f.input :warranty,label:"保修期"%></div></div>

  <div class="col-md-3 col-xs-6"><div class="form_price"><%= f.input :price,label:"价格"%></div></div>
  <div class="col-md-3 col-xs-6"><div class="form_age_limit"><%= f.input :age_limit,label:"年限"%></div></div>
  <div class="col-md-12"><div class="form_description"><%= f.input :description,label:"描述"%></div></div>
  <div class="col-md-12"><div class="form_purchase_date"><%= f.input :purchase_date,label:"购入日期"%></div></div>
  <div class="col-md-12"><div class="form_is_for_production"><%= f.input :is_for_production,label:"是否为生产设备"%></div></div>
  <div class="col-md-12"><div class="form_image"><%= f.input :image, as: :file, class: "btn btn-default"%></div></div>

  <div class="col-md-12"><%= f.submit '提交',data: {disable_with: "Submiting..."}, class: "btn btn-primary btn-lg"%></div>
  <% end %>

</div>
