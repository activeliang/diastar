<!DOCTYPE html>
<html>
    <head>
        <title>Diastar&Errepi Equibhub</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes"%>
            <div class="row">
                <div class="col-md-2 ">
                    <ul class="nav nav-pills nav-stacked clearfix" style="max-width: 300px;">
                        <li class="clearfix">
                            <%= link_to("所有设备", admin_equibs_path, class: "btn btn-primary") %>
                        </li>
                        <li>
                            <%= link_to("后台数据", dashboard_admin_equibs_path, class: "btn btn-success")%></li>
                    </ul>
                </div>
                <div class="col-md-10 clearfix">
                    <%= yield %>
                </div>
            </div>
        </div>
        <%= render "common/footer"%>
    </body>
</html>
